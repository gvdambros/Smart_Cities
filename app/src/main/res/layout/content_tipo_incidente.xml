<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Confirmar Tipo"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <GridLayout
        android:layout_width="368dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/gridLayout">

        <RadioButton
            android:id="@+id/rbEletrico"
            android:layout_width="184dp"
            android:layout_height="100dp"
            android:checked="true"
            android:gravity="fill_vertical"
            android:text="Eletrico"
            android:visibility="visible"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="78dp" />

        <RadioButton
            android:id="@+id/rbHidraulico"
            android:layout_width="184dp"
            android:layout_height="100dp"
            android:checked="true"
            android:gravity="fill_vertical"
            android:text="Hidraulico"
            android:visibility="visible"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="78dp" />

        <RadioButton
            android:id="@+id/rbLixo"
            android:layout_width="184dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="1"
            android:checked="true"
            android:gravity="fill_vertical"
            android:text="Lixo"
            android:visibility="visible"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="239dp" />

        <RadioButton
            android:id="@+id/rbAmbiental"
            android:layout_width="184dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="1"
            android:checked="true"
            android:gravity="fill_vertical"
            android:text="Ambiental"
            android:visibility="visible"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="159dp" />

        <RadioButton
            android:id="@+id/rbRuas_E_Calcadas"
            android:layout_width="184dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="2"
            android:checked="true"
            android:gravity="fill_vertical"
            android:text="Ruas e Calcadas"
            android:visibility="visible"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="159dp" />

        <RadioButton
            android:id="@+id/rbMockUp6"
            android:layout_width="184dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="2"
            android:checked="true"
            android:gravity="fill_vertical"
            android:text="MockUp6"
            android:visibility="visible"
            tools:layout_editor_absoluteX="184dp"
            tools:layout_editor_absoluteY="239dp" />
    </GridLayout>
</android.support.constraint.ConstraintLayout>

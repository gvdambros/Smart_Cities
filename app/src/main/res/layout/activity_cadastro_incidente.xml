<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.app.challenge.smart_cities.ActivityCadastroIncidente">

    <TextView
        android:id="@+id/tvLocal"
        android:layout_width="254dp"
        android:layout_height="63dp"
        android:text="Local"
        tools:layout_editor_absoluteX="44dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tvDescricao"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvDescricao"
        android:layout_width="297dp"
        android:layout_height="154dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="138dp" />

    <Button
        android:id="@+id/rbCriarIncidente"
        android:layout_width="174dp"
        android:layout_height="49dp"
        android:text="Criar"
        tools:layout_editor_absoluteX="93dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:id="@+id/ibCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:srcCompat="@android:drawable/ic_menu_camera"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDescricao"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/rbCriarIncidente" />
</android.support.constraint.ConstraintLayout>
